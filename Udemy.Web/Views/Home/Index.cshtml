@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<CourseViewModel>
<h2>All Courses</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var course in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="/pictures/courses/@course.PictureFileName" class="card-img-top" alt="@course.Title">
                <div class="card-body">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text">@course.ShortDescription</p>
                    <p class="card-text"><small class="text-muted">Instructor: @course.EducatorName</small></p>
                    <p class="card-text"><strong>@course.Price</strong></p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>