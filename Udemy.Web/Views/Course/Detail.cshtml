@{
    ViewData["Title"] = "Detail";
}
@model Udemy.Web.Models.Services.ViewModel.Course.CourseViewModel
<div class="row">
    <div class="col-md-8">
        <h1>@Model.Title</h1>
        <p class="text-muted">@Model.ShortDescription</p>
        <p><strong>Educator:</strong> @Model.EducatorName</p>
        <p><strong>Total Hours:</strong> @Model.TotalHourTime</p>
        <p><strong>Created At:</strong> @Model.CreatedAt</p>
        <p><strong>Updated At:</strong> @Model.GetUpdatedAt()</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>
        <p><strong>Description :</strong></p>
        <p>@Model.Description</p>
    </div>
    <div class="col-md-4">
        <div class="card">
            <img src="/pictures/courses/@Model.PictureFileName" class="card-img-top" alt="@Model.Title">
            <div class="card-body">
                <h5 class="card-title">@Model.Price</h5>
                <a class="btn btn-primary" asp-controller="Baskets" asp-action="AddBasketItem" asp-route-id="@Model.Id">Add to Basket</a>
            </div>
        </div>
    </div>
</div>


